    <script>
        function switchTab(tabName) {
            const propView = document.getElementById('view-propuesta');
            const ramosView = document.getElementById('view-ramos');
            const btnProp = document.getElementById('btn-propuesta');
            const btnRamos = document.getElementById('btn-ramos');

            if(tabName === 'propuesta') {
                propView.classList.remove('hidden');
                ramosView.classList.add('hidden');
                
                // Estilos Botones
                btnProp.className = "px-6 py-2 rounded-full text-xs font-bold uppercase tracking-widest transition-all bg-brandBlue text-white shadow-md";
                btnRamos.className = "px-6 py-2 rounded-full text-xs font-bold uppercase tracking-widest transition-all text-slate-500 hover:text-brandBlue";
            } else if (tabName === 'ramos') {
                propView.classList.add('hidden');
                ramosView.classList.remove('hidden');
                
                // Estilos Botones
                btnRamos.className = "px-6 py-2 rounded-full text-xs font-bold uppercase tracking-widest transition-all bg-brandBlue text-white shadow-md";
                btnProp.className = "px-6 py-2 rounded-full text-xs font-bold uppercase tracking-widest transition-all text-slate-500 hover:text-brandBlue";
            } else if (tabName === 'directores') {
                // Scroll a directores en propuesta
                switchTab('propuesta');
                setTimeout(() => {
                    document.getElementById('directores-section').scrollIntoView({behavior: 'smooth'});
                }, 100);
            }
        }

        function contactar(ramo) {
            const numero = "593983900050";
            const mensaje = `Hola EvoluSer, estoy interesado en cotizar un seguro de: ${ramo}.`;
            window.open(`https://wa.me/${numero}?text=${encodeURIComponent(mensaje)}`, '_blank');
        }
    </script>
