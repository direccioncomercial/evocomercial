    <script>
        // Slogan Dinámico con animación Neon
        function createSlogan(text) {
            const container = document.getElementById('slogan-container');
            text.split('').forEach((char, i) => {
                const span = document.createElement('span');
                span.innerText = char === ' ' ? '\u00A0' : char;
                span.className = 'neon-letter';
                span.style.animationDelay = `${i * 0.1}s`;
                container.appendChild(span);
            });
        }

        // Navegación de Tabs
        function switchTab(tab) {
            const btnP = document.getElementById('btn-propuesta');
            const btnR = document.getElementById('btn-ramos');
            const viewP = document.getElementById('view-propuesta');
            const viewR = document.getElementById('view-ramos');

            if (tab === 'propuesta') {
                viewP.classList.remove('hidden');
                viewR.classList.add('hidden');
                btnP.className = "px-8 py-3 rounded-full text-xs font-bold uppercase tracking-widest transition-all bg-brandBlue text-white shadow-lg";
                btnR.className = "px-8 py-3 rounded-full text-xs font-bold uppercase tracking-widest transition-all text-slate-400 hover:text-brandBlue";
            } else {
                viewR.classList.remove('hidden');
                viewP.classList.add('hidden');
                btnR.className = "px-8 py-3 rounded-full text-xs font-bold uppercase tracking-widest transition-all bg-brandBlue text-white shadow-lg";
                btnP.className = "px-8 py-3 rounded-full text-xs font-bold uppercase tracking-widest transition-all text-slate-400 hover:text-brandBlue";
            }
            window.scrollTo({ top: 400, behavior: 'smooth' });
        }

        document.addEventListener('DOMContentLoaded', () => {
            createSlogan("Protegemos tu patrimonio, aseguramos tu futuro");
            if (typeof VanillaTilt !== 'undefined') {
                VanillaTilt.init(document.querySelectorAll("[data-tilt]"), {
                    max: 10,
                    speed: 400,
                    glare: true,
                    "max-glare": 0.3
                });
            }
        });
    </script>
